<div class="cta-section">
  <div class="cta-container">
    <h2>
      There is nothing stopping you <span class="md:block"></span>from becoming a master
    </h2>
    <div class="cta-button-container">
      <a href="#"> Explore our courses </a>
    </div>
  </div>
</div>

<div class="bento">
  <div class="bento__container">
    <div class="bento__grid">
      <div class="bento__item bento__item--large">
        <div class="bento__item-content bento__item-content--with-carousel">
          <div class="bento__item-text bento__item-text--with-carousel">
            <h5>Categories</h5>
            <p>
              Find the courses
              <span class="lg:block"></span>
              you are most
              <span class="lg:block"></span>
              interested in,
              <span class="lg:block"></span>
              Just today
            </p>
            <a href="#"> Find your course</a>
          </div>
          <div class="bento__carousel-container">
            <!-- Carousel Here: Use Lightwiegh Vanilla Js plugin please no Jquery -->
          </div>
        </div>
      </div>

      <div class="bento__item bento__item--medium">
        <div class="bento__item-content">
          <div class="bento__item-image">
            <img src="https://placeholder.co/400x300/e5e7eb?text" alt="Keep your loved ones safe" />
          </div>
          <div class="bento__item-text">
            <h5>Keep your loved ones safe</h5>
            <p class="bento__item-text-description">
              Voluptate. magnam magni doloribus dolores voluptates a sapiente inventore nisi.
            </p>
          </div>
        </div>
      </div>

      {
        items.map((item) => (
          <div class="bento__item bento__item--small">
            <div class="bento__item-content">
              <div class="bento__item-image">
                <img src={item.imgSrc} alt={item.imgAlt} />
              </div>
              <div class="bento__item-text">
                <h5>{item.description}</h5>
                <p class="bento__item-text-description">{item.title}</p>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</div>

<style>
