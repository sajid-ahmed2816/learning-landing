    @apply mx-auto max-w-7xl px-6 py-10 sm:py-12 lg:px-8;
  }

  .cta-container {
    @apply lg:items-end lg:justify-between lg:flex;
  }

  .cta-button-container {
    @apply mt-10 gap-x-6 items-center flex lg:mt-0 lg:flex-shrink-0;
  }

  .bento {
    @apply mx-auto max-w-7xl px-6 text-gray-500;
  }

  .bento__container {
    @apply relative;
  }

  .bento__grid {
    @apply z-10 grid-cols-1 gap-3 relative grid md:grid-cols-12;
  }

  .bento__item {
    @apply rounded-xl border border-gray-200 bg-white overflow-hidden relative dark:border-gray-800 dark:bg-gray-900;
  }

  .bento__item--large {
    @apply col-span-full md:col-span-7;
    @apply flex-col flex;
  }

  .bento__item--medium {
    @apply col-span-full text-center md:col-span-5;
