<header x-data="navigation()" class="bg-white">
  <nav class="mx-auto max-w-7xl p-6 items-center justify-between flex lg:px-8" aria-label="Global">
    <div class="flex lg:flex-1">
      <a href="#" class="-m-1.5 p-1.5">
        <span class="sr-only">Your Company</span>
        <img
          class="h-8 w-auto"
          src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600"
          alt=""
        />
      </a>
    </div>
    <div class="flex lg:hidden">
      <button
        @click="toggleMobileMenu"
        type="button"
        class="-m-2.5 rounded-md p-2.5 text-gray-700 items-center justify-center inline-flex"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
      </button>
    </div>
    <div class="hidden lg:gap-x-12 lg:flex">
      <a href="#" class="text-sm font-semibold leading-6 text-gray-900">Product</a>
      <a href="#" class="text-sm font-semibold leading-6 text-gray-900">Features</a>
      <a href="#" class="text-sm font-semibold leading-6 text-gray-900">Marketplace</a>

      <div class="relative">
        <button
          @click="toggleCompanyMenu"
          type="button"
          class="gap-x-1 text-sm font-semibold leading-6 text-gray-900 items-center flex"
          :aria-expanded="companyMenuOpen"
        >
          Company
          <svg
            class="h-5 w-5 flex-none text-gray-400"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z"
              clip-rule="evenodd"></path>
          </svg>
        </button>

        <div
          x-show="companyMenuOpen"
          x-transition:enter="transition ease-out duration-200"
          x-transition:enter-start="opacity-0 translate-y-1"
          x-transition:enter-end="opacity-100 translate-y-0"
          x-transition:leave="transition ease-in duration-150"
          x-transition:leave-start="opacity-100 translate-y-0"
          x-transition:leave-end="opacity-0 translate-y-1"
          @click.away="companyMenuOpen = false"
          class="absolute -left-8 top-full z-10 mt-3 w-56 rounded-xl bg-white p-2 shadow-lg ring-1 ring-gray-900/5"
        >
          <a
            href="#"
            class="rounded-lg px-3 py-2 text-sm font-semibold leading-6 text-gray-900 block hover:bg-gray-50"
            >About us</a
          >
          <a
            href="#"
            class="rounded-lg px-3 py-2 text-sm font-semibold leading-6 text-gray-900 block hover:bg-gray-50"
            >Careers</a
          >
          <a
            href="#"
            class="rounded-lg px-3 py-2 text-sm font-semibold leading-6 text-gray-900 block hover:bg-gray-50"
            >Support</a
          >
          <a
            href="#"
            class="rounded-lg px-3 py-2 text-sm font-semibold leading-6 text-gray-900 block hover:bg-gray-50"
            >Press</a
          >
          <a
            href="#"
            class="rounded-lg px-3 py-2 text-sm font-semibold leading-6 text-gray-900 block hover:bg-gray-50"
            >Blog</a
          >
        </div>
      </div>
    </div>
    <div class="hidden lg:flex-1 lg:justify-end lg:flex">
      <a href="#" class="text-sm font-semibold leading-6 text-gray-900"
        >Log in <span aria-hidden="true">&rarr;</span></a
      >
    </div>
  </nav>
  <!-- Mobile menu, show/hide based on menu open state. -->
  <div x-show="mobileMenuOpen" class="lg:hidden" role="dialog" aria-modal="true">
    <!-- Background backdrop, show/hide based on slide-over state. -->
    <div class="fixed inset-0 z-10"></div>
    <div
      class="fixed inset-y-0 right-0 z-[9999] w-full bg-white px-6 py-6 overflow-y-auto sm:max-w-sm sm:ring-1 sm:ring-gray-900/10"
    >
      <div class="items-center justify-between flex">
        <a href="#" class="-m-1.5 p-1.5">
          <span class="sr-only">Your Company</span>
          <img
            class="h-8 w-auto"
            src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600"
            alt=""
          />
        </a>
        <button
          @click="closeMobileMenu"
          type="button"
          class="-m-2.5 rounded-md p-2.5 text-gray-700"
        >
          <span class="sr-only">Close menu</span>
          <svg
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-gray-500/10">
          <div class="space-y-2 py-6">
            <a
              href="#"
              class="-mx-3 rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 block hover:bg-gray-50"
              >Product</a
            >
            <a
              href="#"
              class="-mx-3 rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 block hover:bg-gray-50"
              >Features</a
            >
            <a
              href="#"
              class="-mx-3 rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 block hover:bg-gray-50"
              >Marketplace</a
            >

            <div class="-mx-3">
              <button
                @click="toggleMobileCompanyMenu"
                type="button"
                class="w-full rounded-lg py-2 pl-3 pr-3.5 text-base font-semibold leading-7 text-gray-900 items-center justify-between flex hover:bg-gray-50"
                :aria-expanded="mobileCompanyMenuOpen"
              >
                Company
                <svg
                  class="h-5 w-5 flex-none"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                  aria-hidden="true"
                >
                  <path
                    fill-rule="evenodd"
                    d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z"
                    clip-rule="evenodd"></path>
                </svg>
              </button>
              <!-- 'Company' sub-menu, show/hide based on menu state. -->
              <div
                x-show="mobileCompanyMenuOpen"
                x-transition:enter="transition ease-out duration-200"
                x-transition:enter-start="opacity-0 -translate-y-1"
                x-transition:enter-end="opacity-100 translate-y-0"
                x-transition:leave="transition ease-in duration-150"
                x-transition:leave-start="opacity-100 translate-y-0"
                x-transition:leave-end="opacity-0 -translate-y-1"
                class="mt-2 space-y-2"
              >
                <a
                  href="#"
                  class="rounded-lg py-2 pl-6 pr-3 text-sm font-semibold leading-7 text-gray-900 block hover:bg-gray-50"
                  >About us</a
                >
                <a
                  href="#"
                  class="rounded-lg py-2 pl-6 pr-3 text-sm font-semibold leading-7 text-gray-900 block hover:bg-gray-50"
                  >Careers</a
                >
                <a
                  href="#"
                  class="rounded-lg py-2 pl-6 pr-3 text-sm font-semibold leading-7 text-gray-900 block hover:bg-gray-50"
                  >Support</a
                >
                <a
                  href="#"
                  class="rounded-lg py-2 pl-6 pr-3 text-sm font-semibold leading-7 text-gray-900 block hover:bg-gray-50"
                  >Press</a
                >
                <a
                  href="#"
                  class="rounded-lg py-2 pl-6 pr-3 text-sm font-semibold leading-7 text-gray-900 block hover:bg-gray-50"
                  >Blog</a
                >
              </div>
            </div>
          </div>
          <div class="py-6">
            <a
              href="#"
              class="-mx-3 rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 block hover:bg-gray-50"
              >Log in</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  import Alpine from "alpinejs";

  function navigation() {
    return {
      mobileMenuOpen: false,
      companyMenuOpen: false,
      mobileCompanyMenuOpen: false,
      toggleMobileMenu() {
        this.mobileMenuOpen = !this.mobileMenuOpen;
      },
      closeMobileMenu() {
        this.mobileMenuOpen = false;
      },
      toggleCompanyMenu() {
        this.companyMenuOpen = !this.companyMenuOpen;
      },
      toggleMobileCompanyMenu() {
        this.mobileCompanyMenuOpen = !this.mobileCompanyMenuOpen;
      },
    };
  }
  Alpine.data("navigation", () => navigation);
</script>
